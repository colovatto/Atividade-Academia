static void Main(string[] args)
        {
            double a, b, c, d;

            double media;

            Console.WriteLine("Escreva um número para A: ");
            a = double.Parse(Console.ReadLine());
            Console.WriteLine("Escreva um número para B: ");
            b = double.Parse(Console.ReadLine());
            Console.WriteLine("Escreva um número para C: ");
            c = double.Parse(Console.ReadLine());
            Console.WriteLine("Escreva um número para D: ");
            d = double.Parse(Console.ReadLine());

            media = (a + b + c + d) / 4;

            Console.WriteLine("Média Aritimética é: " + media);
        }
